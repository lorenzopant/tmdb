{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["TMDB_ACCESS_TOKEN", "TMDB_KEY"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		}
	}
}
