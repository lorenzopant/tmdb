{
	"plugins": {
		"release-it-pnpm": {},
		"@release-it/conventional-changelog": {
			"preset": "conventionalcommits",
			"infile": "CHANGELOG.md"
		}
	},
	"github": {
		"release": true
	},
	"git": {
		"commitMessage": "chore: release v${version}",
		"release": true
	},
	"npm": {
		"skipChecks": true
	},
	"publishConfig": {
		"access": "public"
	}
}
