{
  "name": "@lorenzopant/tmdb",
  "version": "1.0.3",
  "description": "A completely type-safe The Movie Database (TMDB) API wrapper for typescript applications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lorenzopant/tmdb"
  },
  "homepage": "https://lorenzopant-docs.vercel.app/",
  "bugs": {
    "url": "https://github.com/lorenzopant/tmdb/issues"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "husky",
    "lint": "eslint .",
    "patch": "npm version patch && npm publish"
  },
  "author": "Lorenzo Pantano",
  "license": "MIT",
  "keywords": [
    "tmdb",
    "typescript",
    "api",
    "movies"
  ],
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.0",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "release-it": "^19.0.3",
    "release-it-pnpm": "^4.6.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  }
}
