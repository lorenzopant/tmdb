{
  "name": "tmdb-api-ts",
  "version": "1.0.0",
  "description": "A completely type-safe The Movie Database (TMDB) API wrapper for typescript applications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lorenzopantano/tmdb-api-ts"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "npm run build"
  },
  "author": "Lorenzo Pantano",
  "license": "MIT",
  "keywords": ["tmdb", "typescript", "api", "movies"],
  "devDependencies": {
    "@types/node": "^22.15.2",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "dotenv": "^16.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
